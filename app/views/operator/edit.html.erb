<div id="edit" class="main">
  <% content_for(:site_nav) do %>
    <%= link_to t(:logout), logout_path, :class => :right %>
  <% end %>
  <div id="title">
    DOT Forward Edit
  </div>
  <%= form_tag update_path do %>
  <p>
    <%= label_tag :address1, ft(:address) %>
    <%= text_field_tag :address1, @input[0][:address] %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :address2, ft(:address) %>
    <%= text_field_tag :address2, @input[1][:address] %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :address3, ft(:address) %>
    <%= text_field_tag :address3, @input[2][:address] %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :address4, ft(:address) %>
    <%= text_field_tag :address4, @input[3][:address] %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :address5, ft(:address) %>
    <%= text_field_tag :address5, @input[4][:address] %>
    <div class="clear"></div>
  </p>
  <p class="longer">
    <%= label_tag :keep, ft(:keep_a_copy) %>
    <%= check_box_tag :keep, 'yes', true %>
    <div class="clear"></div>
  </p>
</div>
  <p><%= submit_tag t(:update), :class => :submit %></p>
  <div class="clear"></div>
  <% end %>
