<div id="main">
  <% content_for(:site_nav) do %>
    <%= link_to t(:logout), logout_path, :class => :right %>
  <% end %>
  <div id="title">
    <%= t(:mail_forward_setting) %>
  </div>
  <%= form_tag update_path do %>
  <p>
    <%= label_tag :address1, t(:address,:no=>1) %>
    <%= text_field_tag :address1, @input[0][:address] %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :address2, t(:address,:no=>2) %>
    <%= text_field_tag :address2, @input[1][:address] %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :address3, t(:address,:no=>3) %>
    <%= text_field_tag :address3, @input[2][:address] %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :address4, t(:address,:no=>4) %>
    <%= text_field_tag :address4, @input[3][:address] %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :address5, t(:address,:no=>5) %>
    <%= text_field_tag :address5, @input[4][:address] %>
    <div class="clear"></div>
  </p>
  <p class="longer">
    <%= label_tag :keep, ft(:keep_a_copy) %>
    <%= check_box_tag :keep, 'yes', @input[5][:keep] %>
    <div class="clear"></div>
  </p>
  <div id="button">
    <div id="flash_container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
    </div>
    <%= submit_tag t(:update), :class => :submit %>
  </div>
  <div class="clear"></div>
  <% end %>
</div>
