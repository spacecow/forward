<div id="login" class="main">
  <div id="title">
    <%= t(:mail_forward_login) %>
  </div>
  <%= form_tag connect_path do %>
  <p>
    <%= label_tag :username, ft(:username) %>
    <%= text_field_tag :username %>
    <div class="clear"></div>
  </p>
  <p>
    <%= label_tag :password, ft(:password) %>
    <%= password_field_tag :password %>
    <div class="clear"></div>
  </p>
</div>
  <p><%= submit_tag t(:login), :class => :submit %></p>
  <div class="clear"></div>
  <% end %>
