<div id="main">
  <% content_for(:site_nav) do %>
    <%= link_to t(:logout), logout_path, :class => :right %>
  <% end %>

  <h1><%= new(:mail_filter) %></h1>

  <%= semantic_form_for [:procmail, @filter], :html =>{:id => :filter} do |f| %>
    <%= f.semantic_errors %>
    <% @filter.rules.each do |rule| %>
      <%= f.inputs :for => [:rules, rule], :class => :inline, :id => :rules do |ref| %>
        <%= render 'rules/form', :f => ref %>
      <% end %>
    <% end %>
    <% @filter.actions.each do |action| %>
      <%= f.inputs :for => [:actions, action], :class => :inline, :id => :actions do |ref| %>
        <%= render 'actions/form', :f => ref %>
      <% end %>
    <% end %>
    <%= f.submit t(:cancel) %>
    <%= f.submit either_of(@filter.new_record?, t(:create), t(:update)) %>
  <% end %>
</div>
